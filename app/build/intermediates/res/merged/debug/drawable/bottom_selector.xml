<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="true" android:color="@android:color/transparent" />
    <!-- 失去焦点时的背景 -->
    <item android:state_pressed="true" android:color="@android:color/transparent" />
    <!-- 按下时的背景 -->
    <item android:state_focused="true" android:color="@android:color/transparent" />
    <!-- 获得焦点时的背景 -->
    <item android:state_selected="true" android:color="#F5F5F5" />
    <!-- 选中状态的背景 -->
    <item android:color="@drawable/btn_bg" />
    <!-- 默认背景 -->

</selector>