<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_click"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:paddingTop="@dimen/text_size_22">

        <LinearLayout
            android:id="@+id/linear_contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/text_size_16"
            android:background="@drawable/contact_title_bg"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_phone_call"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/contact_icon_wh"
                    android:layout_height="@dimen/contact_icon_wh"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="8dp"
                    android:background="@drawable/contact_phone_selector"/>

                <TextView
                    android:id="@+id/tv_phone_nub"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="4000-466-556"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_16"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/vi_line_h"
                android:layout_marginBottom="6dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/rs_bottom_line"
                android:visibility="gone"/>

            <LinearLayout
                android:id="@+id/ll_qq_ser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone">

                <ImageView
                    android:layout_width="@dimen/contact_icon_wh"
                    android:layout_height="@dimen/contact_icon_wh"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="8dp"
                    android:background="@drawable/contact_email_selector"/>

                <TextView
                    android:id="@+id/tv_qq_nub"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="云洋e农客服"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_16"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/vi_line_h"
                android:layout_marginBottom="6dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/rs_bottom_line"/>

            <LinearLayout
                android:id="@+id/ll_internet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/contact_icon_wh"
                    android:layout_height="@dimen/contact_icon_wh"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="8dp"
                    android:background="@drawable/contact_internet_selector"/>

                <TextView
                    android:id="@+id/tv_web_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="www.yunyangdata.com"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_16"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>