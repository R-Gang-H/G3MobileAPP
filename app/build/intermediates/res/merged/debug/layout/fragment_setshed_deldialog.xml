<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_green_rec"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_deldialog_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="系统提醒"
        android:textSize="22sp"
        android:background="@color/green"
        android:textColor="#ffffff"
        android:gravity="center" />

    <TextView
        android:id="@+id/tv_devide"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#25C730" />

    <TextView
        android:id="@+id/tv_deldialog_content"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="是否确定删除该大棚？"
        android:textSize="20sp"
        android:gravity="center"
        android:textColor="#25C730" />

    <TextView
        android:id="@+id/tv_devide_two"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#25C730" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_ensure"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="45dp"
            android:text="确认"
            android:textSize="20sp"
            android:layout_marginLeft="1dp"
            android:layout_marginBottom="1dp"
            android:textColor="@drawable/selector_tv_color"
            android:background="@drawable/selector_delshed_ensure" />

        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#25C730" />

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="45dp"
            android:text="取消"
            android:textSize="20sp"
            android:layout_marginBottom="1dp"
            android:layout_marginRight="1dp"
            android:textColor="@drawable/selector_tv_color"
            android:background="@drawable/selector_delshed_cancel" />
    </LinearLayout>
</LinearLayout>
