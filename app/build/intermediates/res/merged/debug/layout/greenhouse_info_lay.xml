<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/historyscore_tb"
        android:orientation="vertical">

        <!-- 大棚名称 -->

        <LinearLayout
            android:id="@+id/ll_green_house_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/text_size_6"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/text_size_8"
                android:layout_weight="1.4"
                android:gravity="center_vertical|right"
                android:text="大棚名称: "
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_12" />

            <TextView
                android:id="@+id/tv_green_house_name"
                android:layout_width="0dp"
                android:layout_height="@dimen/contact_icon_wh"
                android:layout_weight="3"
                android:background="@null"
                android:drawableBottom="@drawable/rs_bottom_line"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_12" />
        </LinearLayout>

        <!-- 大棚编号 -->

        <LinearLayout
            android:id="@+id/ll_green_house_code"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/text_size_6"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/text_size_8"
                android:layout_weight="1.4"
                android:gravity="center_vertical|right"
                android:text="大棚编号: "
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_12" />

            <TextView
                android:id="@+id/tv_green_house_code"
                android:layout_width="0dp"
                android:layout_height="@dimen/contact_icon_wh"
                android:layout_weight="3"
                android:background="@null"
                android:drawableBottom="@drawable/rs_bottom_line"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_12" />
        </LinearLayout>

        <!-- 总面积 -->

        <LinearLayout
            android:id="@+id/ll_total_area"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/text_size_6"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/text_size_8"
                android:layout_weight="1.4"
                android:gravity="center_vertical|right"
                android:text="总面积(平米): "
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_12" />

            <TextView
                android:id="@+id/tv_total_area"
                android:layout_width="0dp"
                android:layout_height="@dimen/contact_icon_wh"
                android:layout_weight="3"
                android:background="@null"
                android:drawableBottom="@drawable/rs_bottom_line"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_12" />
        </LinearLayout>

        <!-- 长度 -->

        <LinearLayout
            android:id="@+id/ll_width"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/text_size_6"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/text_size_8"
                android:layout_weight="1.4"
                android:gravity="center_vertical|right"
                android:text="长度: "
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_12" />

            <TextView
                android:id="@+id/tv_width"
                android:layout_width="0dp"
                android:layout_height="@dimen/contact_icon_wh"
                android:layout_weight="3"
                android:background="@null"
                android:drawableBottom="@drawable/rs_bottom_line"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_12" />
        </LinearLayout>

        <!-- 宽度 -->

        <LinearLayout
            android:id="@+id/ll_height"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/text_size_6"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/text_size_8"
                android:layout_weight="1.4"
                android:gravity="center_vertical|right"
                android:text="宽度: "
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_12" />

            <TextView
                android:id="@+id/tv_height"
                android:layout_width="0dp"
                android:layout_height="@dimen/contact_icon_wh"
                android:layout_weight="3"
                android:background="@null"
                android:drawableBottom="@drawable/rs_bottom_line"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_12" />
        </LinearLayout>

        <!-- 种植面积 -->

        <LinearLayout
            android:id="@+id/ll_Planting_area"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/text_size_6"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/text_size_8"
                android:layout_weight="1.4"
                android:gravity="center_vertical|right"
                android:text="种植面积(平米): "
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_12" />

            <TextView
                android:id="@+id/tv_Planting_area"
                android:layout_width="0dp"
                android:layout_height="@dimen/contact_icon_wh"
                android:layout_weight="3"
                android:background="@null"
                android:drawableBottom="@drawable/rs_bottom_line"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_12" />
        </LinearLayout>

        <!-- 启动时间 -->

        <LinearLayout
            android:id="@+id/ll_gender"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/text_size_6"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.4"
                android:gravity="center_vertical|right"
                android:text="启动时间: "
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_12" />

            <TextView
                android:id="@+id/start_distri_time"
                android:layout_width="0dp"
                android:layout_height="@dimen/contact_icon_wh"
                android:layout_weight="3"
                android:background="@null"
                android:drawableBottom="@drawable/rs_bottom_line"
                android:gravity="center_vertical"
                android:inputType="text"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_12" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>