<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/u2_normal"
    android:orientation="vertical">

    <include layout="@layout/activity_back_title" />
    <!-- 农事记录标题 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/green2"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_far_task_title"
            android:layout_width="wrap_content"
            android:layout_height="30dip"
            android:layout_weight="6"
            android:gravity="center_vertical"
            android:paddingLeft="10dip"
            android:text="农事填报"
            android:textColor="@color/white" />
    </LinearLayout>

    <com.app.itserv.views.PagerScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fadingEdge="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/historyscore_tb"
                android:orientation="vertical">

                <!-- 执行时间段 -->

                <LinearLayout
                    android:id="@+id/ll_gender"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/text_size_6"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical|right"
                        android:text="执行时间: "
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_12" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/far_exa_start_distri_time"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/contact_icon_wh"
                            android:layout_weight="0.7"
                            android:background="@null"
                            android:drawableBottom="@drawable/rs_bottom_line"
                            android:gravity="center"
                            android:inputType="text"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_12" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_gravity="center"
                            android:layout_weight="0.1"
                            android:background="@color/black" />

                        <TextView
                            android:id="@+id/far_exa_start_distri_time_hour"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/contact_icon_wh"
                            android:layout_weight="0.3"
                            android:background="@null"
                            android:drawableBottom="@drawable/rs_bottom_line"
                            android:gravity="center"
                            android:inputType="number"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_12" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="@dimen/contact_icon_wh"
                            android:layout_weight="0.1"
                            android:background="@null"
                            android:drawableBottom="@drawable/rs_bottom_line"
                            android:gravity="center"
                            android:inputType="text"
                            android:text="时"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_12" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_gravity="center"
                            android:layout_weight="0.1"
                            android:background="@color/black" />

                        <TextView
                            android:id="@+id/far_exa_stop_distri_time"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/contact_icon_wh"
                            android:layout_weight="0.7"
                            android:background="@null"
                            android:drawableBottom="@drawable/rs_bottom_line"
                            android:gravity="center"
                            android:inputType="text"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_12" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_gravity="center"
                            android:layout_weight="0.1"
                            android:background="@color/black" />

                        <TextView
                            android:id="@+id/far_exa_stop_distri_time_hour"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/contact_icon_wh"
                            android:layout_weight="0.3"
                            android:background="@null"
                            android:drawableBottom="@drawable/rs_bottom_line"
                            android:gravity="center"
                            android:inputType="number"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_12" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="@dimen/contact_icon_wh"
                            android:layout_weight="0.1"
                            android:background="@null"
                            android:drawableBottom="@drawable/rs_bottom_line"
                            android:gravity="center"
                            android:inputType="text"
                            android:text="时"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_12" />
                    </LinearLayout>
                </LinearLayout>

                <!-- 工作大棚 -->

                <LinearLayout
                    android:id="@+id/ll_role"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/text_size_6"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical|right"
                        android:text="工作大棚: "
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_12" />

                    <TextView
                        android:id="@+id/far_exa_greenhouse"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/contact_icon_wh"
                        android:layout_weight="3"
                        android:background="@null"
                        android:drawableBottom="@drawable/rs_bottom_line"
                        android:gravity="center_vertical"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_12" />
                </LinearLayout>

                <!-- 农事分类 -->

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/text_size_6"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/text_size_8"
                        android:layout_weight="1"
                        android:gravity="center_vertical|right"
                        android:text="农事分类:"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_12" />

                    <TextView
                        android:id="@+id/far_exa_classify"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/contact_icon_wh"
                        android:layout_weight="3"
                        android:background="@null"
                        android:drawableBottom="@drawable/rs_bottom_line"
                        android:gravity="center_vertical"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_12" />
                </LinearLayout>

                <!-- 任务名称 -->

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/text_size_6"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/text_size_8"
                        android:layout_weight="1"
                        android:gravity="center_vertical|right"
                        android:text="任务名称:"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_12" />

                    <TextView
                        android:id="@+id/far_exa_task_name"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/contact_icon_wh"
                        android:layout_weight="3"
                        android:background="@null"
                        android:drawableBottom="@drawable/rs_bottom_line"
                        android:gravity="center_vertical"
                        android:inputType="text"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_12" />
                </LinearLayout>

                <!-- 上传图片 -->

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/text_size_6"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/text_size_8"
                        android:layout_weight="1"
                        android:gravity="center_vertical|right"
                        android:text="上传图片:"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_12" />

                    <TextView
                        android:id="@+id/far_exa_upload_img"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/contact_icon_wh"
                        android:layout_weight="3"
                        android:background="@null"
                        android:clickable="true"
                        android:drawableBottom="@drawable/rs_bottom_line"
                        android:gravity="center_vertical|right"
                        android:text="选择"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_12" />
                </LinearLayout>
                <!-- 工作前照片预览 -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/text_size_6"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/text_size_4"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="工作前预览:"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_12" />

                    <ImageView
                        android:id="@+id/far_exa_preview1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:src="@drawable/img_base" />
                </LinearLayout>
                <!-- 工作后照片预览 -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/text_size_6"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/text_size_8"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="工作预览:"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_12" />

                    <ImageView
                        android:id="@+id/far_exa_preview2"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_weight="3"
                        android:src="@drawable/card_bg_1" />
                </LinearLayout>
                <!-- 文字说明 -->

                <LinearLayout
                    android:id="@+id/ll_remarks"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/text_size_6"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="@dimen/text_size_3"
                            android:layout_marginRight="@dimen/text_size_8"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="文字说明:"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_12" />

                        <!-- 自动生成 -->

                        <Button
                            android:id="@+id/btn_auto_build"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/btn_sort_h"
                            android:layout_marginBottom="@dimen/text_size_3"
                            android:layout_marginRight="@dimen/text_size_8"
                            android:layout_weight="1"
                            android:background="@drawable/change_bg"
                            android:text="@string/auto_build"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_12"
                            android:visibility="gone" />

                        <!-- 手动编辑 -->

                        <Button
                            android:id="@+id/btn_manual_edit"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/btn_sort_h"
                            android:layout_marginBottom="@dimen/text_size_3"
                            android:layout_marginRight="@dimen/text_size_8"
                            android:layout_weight="1"
                            android:background="@drawable/change_bg"
                            android:text="@string/btn_manual_edit"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_12"
                            android:visibility="gone" />
                    </LinearLayout>

                    <EditText
                        android:id="@+id/far_exa_task_describe"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/contact_icon_w"
                        android:layout_weight="3"
                        android:background="@drawable/shape_green_rec"
                        android:enabled="false"
                        android:gravity="top|left"
                        android:inputType="textMultiLine"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_12" />
                </LinearLayout>
            </LinearLayout>

            <!-- 任务操作历史标题 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/green2"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dip"
                    android:layout_weight="6"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dip"
                    android:text="如有问题请填写下面的问题说明，并传图。"
                    android:textColor="@color/yellow" />
            </LinearLayout>
            <!-- 是否存在问题 -->

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/text_size_6"
                android:gravity="center"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/far_exa_ck_issue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/text_size_8"
                    android:gravity="center_vertical|right"
                    android:text="是否存在问题"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_12" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/historyscore_tb"
                android:orientation="vertical">

                <!-- 问题说明 -->

                <LinearLayout
                    android:id="@+id/ll_far_ex_problem_description"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/text_size_6"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/text_size_4"
                        android:layout_weight="1"
                        android:gravity="center_vertical|right|top"
                        android:text="问题说明:"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_12" />

                    <EditText
                        android:id="@+id/far_exa_issue_explain"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/contact_icon_w"
                        android:layout_weight="3"
                        android:background="@drawable/shape_green_rec"
                        android:gravity="top|left"
                        android:inputType="textMultiLine"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_12" />
                </LinearLayout>

                <!-- 上传图片 -->

                <LinearLayout
                    android:id="@+id/ll_far_ex_upload_pictures"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/text_size_6"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/text_size_8"
                        android:layout_weight="1"
                        android:gravity="center_vertical|right"
                        android:text="上传图片:"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_12" />

                    <TextView
                        android:id="@+id/far_exa_upload_issue_img"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/contact_icon_wh"
                        android:layout_weight="3"
                        android:background="@null"
                        android:clickable="true"
                        android:drawableBottom="@drawable/rs_bottom_line"
                        android:gravity="center_vertical|right"
                        android:text="选择"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_12" />
                </LinearLayout>

                <!-- 预览 -->

                <LinearLayout
                    android:id="@+id/ll_far_ex_preview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/text_size_6"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/text_size_4"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="预览:"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_12" />

                    <ImageView
                        android:id="@+id/far_exa_preview3"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_weight="3"
                        android:src="@drawable/card_bg_1" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/shallowblue" />

            <LinearLayout
                android:id="@+id/far_exa_ll_supply"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:gravity="center"
                android:orientation="horizontal">

                <!-- 提交按钮 -->

                <Button
                    android:id="@+id/far_exa_btn_submite"
                    android:layout_width="@dimen/btn_click_w"
                    android:layout_height="@dimen/contact_icon_wh"
                    android:background="@drawable/change_bg"
                    android:padding="6dp"
                    android:text="@string/submite"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_12" />

                <!-- 取消按钮 -->

                <Button
                    android:id="@+id/far_exa_cannel"
                    android:layout_width="@dimen/btn_click_w"
                    android:layout_height="@dimen/contact_icon_wh"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/change_bg"
                    android:padding="6dp"
                    android:text="@string/btn_cancel"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_12" />

            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/shallowblue" />
        </LinearLayout>
    </com.app.itserv.views.PagerScrollView>

</LinearLayout>