<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="18dp"
    android:background="@color/blue"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_deldialog_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_home_items_h"
        android:background="@color/blue"
        android:gravity="left|center_vertical"
        android:paddingLeft="@dimen/text_size_12"
        android:text="确认"
        android:textColor="#ffffff"
        android:textSize="@dimen/text_size_16" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/vi_line_h"
        android:layout_marginLeft="@dimen/text_size_3"
        android:layout_marginRight="@dimen/text_size_3"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_comfirmdialog_content"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@color/white"
            android:gravity="center"
            android:textSize="@dimen/text_size_16" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/skyblue"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/text_size_3">

            <Button
                android:id="@+id/btn_ensurequit"
                android:layout_width="@dimen/img_title"
                android:layout_height="@dimen/tv_yyen_size"
                android:layout_marginRight="10dp"
                android:background="@drawable/btn_bg"
                android:text="确认"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_14"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_cancelquit"
                android:layout_width="@dimen/img_title"
                android:layout_height="@dimen/tv_yyen_size"
                android:layout_marginLeft="10dp"
                android:background="@drawable/btn_bg"
                android:text="取消"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_14"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>