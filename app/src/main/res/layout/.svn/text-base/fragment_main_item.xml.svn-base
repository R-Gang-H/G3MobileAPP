<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/mainFragmentItemLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/mainFragmentItemHouse"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:background="@drawable/house2"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="5dp"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/mainFragmentItemShedName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="云洋数据智能网关"
            android:textSize="20sp"
            android:layout_toRightOf="@id/mainFragmentItemHouse"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp" />

        <TextView
            android:id="@+id/mainFragmentItemCropName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="小麦"
            android:textSize="15sp"
            android:layout_toRightOf="@id/mainFragmentItemShedName"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp" />

        <LinearLayout
            android:id="@+id/mainFragmentItemArrowArea"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true">

            <ImageView
                android:id="@+id/mainFragmentItemArrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/lead2"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/mainFragmentItemData"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="#009F37"
        android:layout_below="@id/mainFragmentItemLayout"
        android:visibility="gone">

        <TextView
            android:id="@+id/mainFragmentItemDataOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="空气温度：20"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:layout_marginLeft="5dp"
            android:layout_centerVertical="true" />
    </RelativeLayout>
</RelativeLayout>
