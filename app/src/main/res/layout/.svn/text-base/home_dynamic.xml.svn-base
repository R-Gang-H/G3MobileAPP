<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/text_size_6"
    android:layout_marginRight="@dimen/text_size_6"
    android:layout_marginTop="@dimen/text_size_3"
    android:background="@color/gray"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/vi_line_h"
        android:background="@color/test_dark_transparent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:src="@drawable/ic_sys_alarm" />

        <View
            android:layout_width="@dimen/vi_line_w"
            android:layout_height="match_parent"
            android:background="@color/test_dark_transparent" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/text_size_8">

            <TextView
                android:id="@+id/tv_sys_alarm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/text_size_6"
                android:layout_marginTop="@dimen/historyscore_tb"
                android:text="@string/tv_sys_alarm"
                android:textSize="@dimen/text_size_16" />

            <TextView
                android:id="@+id/tv_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_sys_alarm"
                android:layout_marginBottom="@dimen/text_size_6"
                android:layout_marginTop="@dimen/text_size_6"
                android:text="今天"
                android:textSize="@dimen/text_size_14" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_sys_alarm"
                android:layout_marginBottom="@dimen/text_size_6"
                android:layout_marginTop="@dimen/text_size_6"
                android:layout_toRightOf="@id/tv_day"
                android:text="16:49:53"
                android:textSize="@dimen/text_size_14" />
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/vi_line_h"
        android:background="@color/test_dark_transparent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/title_padding_left"
        android:paddingRight="@dimen/title_padding_left">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/text_size_6"
            android:layout_marginTop="@dimen/historyscore_tb"
            android:text="一氧化碳含量稍低"
            android:textSize="@dimen/text_size_16" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/text_size_6"
            android:layout_marginTop="@dimen/historyscore_tb"
            android:singleLine="true"
            android:text="一氧化碳含量稍低一氧化碳含量稍低一氧化碳含量稍低一氧化碳含量稍低一氧化碳含量稍低一氧化碳含量稍低"
            android:textSize="@dimen/text_size_12" />
    </LinearLayout>

</LinearLayout>