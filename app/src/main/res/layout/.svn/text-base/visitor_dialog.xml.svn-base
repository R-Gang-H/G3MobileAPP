<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_green_rec"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_visitordialog_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="授权访客"
        android:textSize="22sp"
        android:background="@color/green"
        android:textColor="#ffffff"
        android:gravity="center" />

    <TextView
        android:id="@+id/tv_visitordevide"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#25C730" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户名:"
            android:textSize="20sp"
            android:gravity="center"
            android:textColor="#25C730"
            android:visibility="gone" />

        <EditText
            android:id="@+id/ev_visitordialog_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:inputType="text"
            android:background="@drawable/input1"
            android:paddingLeft="8dp"
            android:textColorHint="#DDDDDD"
            android:hint="用户名" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_visitordevide_two"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#25C730" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_visitorensurequit"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="45dp"
            android:text="确定"
            android:textSize="20sp"
            android:layout_marginLeft="1dp"
            android:layout_marginBottom="1dp"
            android:textColor="@drawable/selector_tv_color"
            android:background="@drawable/selector_delshed_ensure" />

        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#25C730" />

        <Button
            android:id="@+id/btn_visitorcancelquit"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="45dp"
            android:text="取消"
            android:textSize="20sp"
            android:layout_marginBottom="1dp"
            android:layout_marginRight="1dp"
            android:textColor="@drawable/selector_tv_color"
            android:background="@drawable/selector_delshed_cancel" />
    </LinearLayout>

</LinearLayout>
