<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/dialnumber_rl"
        android:layout_width="250dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/addDeviceTitle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/green"
            android:gravity="center"
            android:padding="5dp"
            android:text="添加报警手机号"
            android:textColor="@color/white"
            android:textSize="@dimen/medium_text_size" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/addDeviceTitle"
            android:background="@drawable/pop_bg_bg"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/device_info"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp">

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="30dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:gravity="left"
                        android:padding="2dp"
                        android:text="姓名"
                        android:textColor="@color/black"
                        android:textSize="@dimen/medium_text_size" />

                </RelativeLayout>

                <EditText
                    android:id="@+id/device_name"
                    android:layout_width="fill_parent"
                    android:layout_height="35dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/input1"
                    android:capitalize="none"
                    android:inputType="text"
                    android:paddingLeft="8dp"
                    android:textColor="@color/black" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:padding="2dp"
                    android:text="手机"
                    android:textColor="@color/black"
                    android:textSize="@dimen/medium_text_size" />

                <EditText
                    android:id="@+id/device_nickname"
                    android:layout_width="fill_parent"
                    android:layout_height="35dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/input1"
                    android:capitalize="none"
                    android:inputType="text"
                    android:paddingLeft="8dp"
                    android:textColor="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/device_info"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    android:id="@+id/add_ok"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/btn_bg"
                    android:gravity="center"
                    android:padding="3dp"
                    android:text="确定"
                    android:textColor="@color/white"
                    android:textSize="@dimen/medium_text_size" />

                <TextView
                    android:id="@+id/cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_bg"
                    android:gravity="center"
                    android:padding="3dp"
                    android:text="取消"
                    android:textColor="@color/white"
                    android:textSize="@dimen/medium_text_size" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>