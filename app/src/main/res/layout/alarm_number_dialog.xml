<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_green_rec"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#146414"
        android:gravity="center"
        android:text="系统提示"
        android:textColor="#ffffff"
        android:textSize="22sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#25C730" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_vistion_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="您还未设置报警电话请点击确定按钮!"
            android:textColor="@color/gray2"
            android:textSize="20sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/ev_visitordelete_dialog_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:gravity="left"
            android:textColor="@color/gray2"
            android:textSize="20sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_visitordelete_devide_two"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#25C730" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_alarmnumber_ensurequit"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_marginBottom="1dp"
            android:layout_marginLeft="1dp"
            android:layout_weight="1"
            android:background="@drawable/selector_delshed_ensure"
            android:text="确定"
            android:textColor="@drawable/selector_tv_color"
            android:textSize="20sp" />

        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#25C730" />

        <Button
            android:id="@+id/btn_alarmnumber_cancelquit"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_marginBottom="1dp"
            android:layout_marginRight="1dp"
            android:layout_weight="1"
            android:background="@drawable/selector_delshed_cancel"
            android:text="取消"
            android:textColor="@drawable/selector_tv_color"
            android:textSize="20sp" />
    </LinearLayout>


</LinearLayout>
