<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/u2_normal"
    android:orientation="vertical">

    <include layout="@layout/activity_back_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- 设备管理标题 -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/green2"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dip"
                android:layout_weight="6"
                android:gravity="center_vertical"
                android:paddingLeft="10dip"
                android:text="设备管理"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/historyscore_tb"
            android:orientation="vertical">

            <!-- 设备名称 -->

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/text_size_6"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/text_size_8"
                    android:layout_weight="1"
                    android:gravity="center_vertical|right"
                    android:text="设备名称:"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_14" />

                <EditText
                    android:id="@+id/equi_name"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/contact_icon_wh"
                    android:layout_weight="3"
                    android:background="@null"
                    android:drawableBottom="@drawable/rs_bottom_line"
                    android:gravity="center_vertical"
                    android:inputType="text"
                    android:text="网关"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_14" />
            </LinearLayout>
            <!-- 设备编号 -->

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/text_size_6"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/text_size_8"
                    android:layout_weight="1"
                    android:gravity="center_vertical|right"
                    android:text="设备编号:"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_14" />

                <EditText
                    android:id="@+id/equi_code"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/contact_icon_wh"
                    android:layout_weight="3"
                    android:background="@null"
                    android:drawableBottom="@drawable/rs_bottom_line"
                    android:text="YBF002080000001002"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_14" />
            </LinearLayout>

            <!-- 设备类型 -->

            <LinearLayout
                android:id="@+id/ll_gender"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/text_size_6"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical|right"
                    android:text="设备类型: "
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_14" />

                <TextView
                    android:id="@+id/tv_equi_type"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/contact_icon_wh"
                    android:layout_weight="3"
                    android:background="@null"
                    android:drawableBottom="@drawable/rs_bottom_line"
                    android:gravity="center_vertical"
                    android:inputType="text"
                    android:text="网关"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_14" />
            </LinearLayout>

            <!-- 所属基地 -->

            <LinearLayout
                android:id="@+id/ll_organization"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/text_size_6"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical|right"
                    android:text="所属基地: "
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_14" />

                <TextView
                    android:id="@+id/tv_base_bel"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/contact_icon_wh"
                    android:layout_weight="3"
                    android:background="@null"
                    android:drawableBottom="@drawable/rs_bottom_line"
                    android:gravity="center_vertical"
                    android:text="1号基地"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_14" />
            </LinearLayout>
            <!-- 所属大棚 -->

            <LinearLayout
                android:id="@+id/ll_role"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/text_size_6"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical|right"
                    android:text="所属大棚: "
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_14" />

                <TextView
                    android:id="@+id/tv_role"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/contact_icon_wh"
                    android:layout_weight="3"
                    android:background="@null"
                    android:drawableBottom="@drawable/rs_bottom_line"
                    android:gravity="center_vertical"
                    android:text="1号棚"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_14" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/shallowblue" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:gravity="center"
            android:orientation="horizontal">

            <!-- 确定绑定 -->

            <Button
                android:id="@+id/btn_select"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/contact_icon_wh"
                android:background="@drawable/change_bg"
                android:padding="6dp"
                android:text="@string/btn_select"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_14" />

            <!-- 重置按钮 -->

            <Button
                android:id="@+id/changepsw_reset"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/contact_icon_wh"
                android:layout_marginLeft="10dp"
                android:background="@drawable/change_bg"
                android:padding="6dp"
                android:text="@string/reset"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_14" />
        </LinearLayout>

        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fadingEdge="none"></ListView>

        <include layout="@layout/equipment_items" />
    </LinearLayout>

</LinearLayout>