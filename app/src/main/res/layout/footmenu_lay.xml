<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/radio_home"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:drawablePadding="2dp"
        android:drawableTop="@drawable/menu_main_page"
        android:gravity="center"
        android:paddingBottom="3dp"
        android:paddingTop="3dp"
        android:text="监控"
        android:textColor="@color/selector_tab_color2"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/radio_monitor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:drawableTop="@drawable/menu_mine_page"
        android:gravity="center"
        android:paddingBottom="3dp"
        android:paddingTop="3dp"
        android:text="农事"
        android:textColor="@color/selector_tab_color2"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/radio_information"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:drawableTop="@drawable/menu_message_page"
        android:gravity="center"
        android:paddingBottom="3dp"
        android:paddingTop="3dp"
        android:text="资讯"
        android:textColor="@color/selector_tab_color2"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/radio_account"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:drawableTop="@drawable/menu_more_page"
        android:gravity="center"
        android:paddingBottom="3dp"
        android:paddingTop="3dp"
        android:text="我的"
        android:textColor="@color/selector_tab_color2"
        android:textSize="14sp" />
</LinearLayout>