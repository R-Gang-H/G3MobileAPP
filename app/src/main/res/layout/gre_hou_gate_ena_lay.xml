<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.app.itserv.activity.GreenHouseGateUnbindActivity">

    <include layout="@layout/activity_back_title" />

    <!-- 大棚启用网关标题 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/shallowblue"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dip"
            android:layout_weight="6"
            android:gravity="center"
            android:paddingLeft="10dip"
            android:text="大棚启用网关"
            android:textColor="@color/white" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/text_size_8"
        android:text="操作说明:设备启用后，系统将显示其实时信息。"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_12" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/shallowblue" />
    <!-- 网关SN号 -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/text_size_6"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|right"
            android:text="网关SN号:"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_14" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_picture"
                android:layout_width="0dp"
                android:layout_height="@dimen/contact_icon_wh"
                android:layout_weight="2"
                android:background="@null"
                android:drawableBottom="@drawable/rs_bottom_line"
                android:gravity="center_vertical"
                android:inputType="text"
                android:text="YBF002080000001001"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_14" />

            <TextView
                android:id="@+id/tv_choose"
                android:layout_width="0dp"
                android:layout_height="@dimen/contact_icon_wh"
                android:layout_weight="1"
                android:gravity="center"
                android:inputType="none"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_14" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/darkmagenta" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:orientation="horizontal">

        <!-- 确定绑定 -->

        <Button
            android:id="@+id/btn_comfirm_bind"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/contact_icon_wh"
            android:background="@drawable/change_bg"
            android:padding="6dp"
            android:text="@string/btn_comfirm_enable"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_14" />

        <!-- 重置按钮 -->

        <Button
            android:id="@+id/changepsw_reset"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/contact_icon_wh"
            android:layout_marginLeft="10dp"
            android:background="@drawable/change_bg"
            android:padding="6dp"
            android:text="@string/reset"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_14" />
    </LinearLayout>

</LinearLayout>