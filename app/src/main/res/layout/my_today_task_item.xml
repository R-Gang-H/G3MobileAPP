<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_size_3"
            android:layout_weight="1"
            android:orientation="horizontal">

            <!-- 创建人 -->

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="创建人:"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_12" />
            <!-- 创建人 -->

            <TextView
                android:id="@+id/tv_create_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_12" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_size_3"
            android:layout_weight="1"
            android:orientation="horizontal">

            <!-- 负责人 -->

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="负责人:"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_12" />

            <!-- 负责人 -->

            <TextView
                android:id="@+id/tv_charge_person"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_12" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_size_3"
            android:layout_weight="1"
            android:orientation="horizontal">

            <!-- 基地名称 -->

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="基地名称:"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_12" />
            <!-- 基地名称 -->

            <TextView
                android:id="@+id/tv_base_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_12" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_size_3"
            android:layout_weight="1"
            android:orientation="horizontal">

            <!-- 大棚名称 -->

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="大棚名称:"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_12" />

            <!-- 大棚名称 -->

            <TextView
                android:id="@+id/tv_ghouse_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_12" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_size_3"
            android:layout_weight="1"
            android:orientation="horizontal">

            <!-- 任务名称 -->

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="任务名称:"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_12" />
            <!-- 任务名称 -->

            <TextView
                android:id="@+id/tv_task_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_12" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_size_3"
            android:layout_weight="1"
            android:orientation="horizontal">

            <!-- 任务时间 -->

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="任务时间:"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_12" />

            <!-- 任务时间 -->

            <TextView
                android:id="@+id/tv_task_time"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_12" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/text_size_8"
        android:layout_marginTop="@dimen/text_size_8"
        android:orientation="horizontal">

        <!-- 开始任务按钮 -->

        <Button
            android:id="@+id/btn_start_task"
            android:layout_width="@dimen/btn_click_w"
            android:layout_height="@dimen/contact_icon_wh"
            android:layout_marginLeft="10dp"
            android:background="@drawable/change_bg"
            android:padding="6dp"
            android:text="@string/btn_start_task"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_12"
            android:visibility="gone" />

        <!-- 记录农事按钮 -->

        <Button
            android:id="@+id/btn_record"
            android:layout_width="@dimen/btn_click_w"
            android:layout_height="@dimen/contact_icon_wh"
            android:layout_marginLeft="10dp"
            android:background="@drawable/change_bg"
            android:padding="6dp"
            android:text="@string/btn_record"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_12"
            android:visibility="gone" />
        <!-- 关闭按钮 -->

        <Button
            android:id="@+id/far_exa_close"
            android:layout_width="@dimen/btn_click_w"
            android:layout_height="@dimen/contact_icon_wh"
            android:layout_marginLeft="10dp"
            android:background="@drawable/change_bg"
            android:padding="6dp"
            android:text="@string/btn_close"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_12"
            android:visibility="gone" />

    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/darkmagenta" />

</LinearLayout>