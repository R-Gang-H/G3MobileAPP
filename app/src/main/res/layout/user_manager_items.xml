<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:descendantFocusability="blocksDescendants"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_details"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="vertical">

            <!-- 用户名 -->

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/text_size_6"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical|right"
                    android:text="账户名:"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_14"/>

                <TextView
                    android:id="@+id/username"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/contact_icon_wh"
                    android:layout_weight="2"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_14"/>
            </LinearLayout>

            <!-- 组织机构 -->

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/text_size_6"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical|right"
                    android:text="组织机构:"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_14"/>

                <TextView
                    android:id="@+id/organization"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/contact_icon_wh"
                    android:layout_weight="2"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_14"/>
            </LinearLayout>

            <!-- 真实姓名 -->

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/text_size_6"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical|right"
                    android:text="用户名:"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_14"/>

                <TextView
                    android:id="@+id/real_name"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/contact_icon_wh"
                    android:layout_weight="2"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_14"/>
            </LinearLayout>

            <!-- 角色 -->

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/text_size_6"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical|right"
                    android:text="角色:"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_14"/>

                <TextView
                    android:id="@+id/et_role"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/contact_icon_wh"
                    android:layout_weight="2"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_14"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/tv_cancell"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="@dimen/text_size_6"
                android:layout_weight="1"
                android:background="@color/green"
                android:gravity="center"
                android:text="注销"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_14"/>

            <Button
                android:id="@+id/tv_activation"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="@dimen/text_size_6"
                android:layout_weight="1"
                android:background="@color/green"
                android:gravity="center"
                android:text="激活"
                android:textColor="@color/yellow"
                android:textSize="@dimen/text_size_14"
                android:visibility="gone"/>

            <Button
                android:id="@+id/tv_greenhouse"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="@dimen/text_size_6"
                android:layout_weight="1"
                android:background="@color/green"
                android:gravity="center"
                android:text="大棚"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_14"/>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/darkmagenta"/>

</LinearLayout>