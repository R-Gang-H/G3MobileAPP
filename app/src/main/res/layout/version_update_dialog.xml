<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_green_rec"
        android:orientation="vertical">

        <TextView
            android:id="@+id/nowversion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_margin="10dp"
            android:text="当前版本V"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_16" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:drawableTop="@drawable/logo_icon"
            android:gravity="center"
            android:text="版本更新"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_versiondialog_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textSize="@dimen/text_size_18" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:fadeScrollbars="false">

            <TextView
                android:id="@+id/tv_versiondialog_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textSize="17sp" />

        </ScrollView>

        <TextView
            android:id="@+id/tv_devide_two"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/test_dark_transparent" />

        <LinearLayout
            android:id="@+id/ll_versionlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="1dp"
                android:layout_weight="1"
                android:background="@drawable/selector_delshed_cancel"
                android:text="稍后再说"
                android:textColor="@drawable/selector_tv_color"
                android:textSize="@dimen/text_size_16" />

            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/test_dark_transparent" />

            <Button
                android:id="@+id/btn_ensure"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginBottom="1dp"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="@drawable/selector_delshed_ensure"
                android:text="立即下载"
                android:textColor="@drawable/selector_tv_color"
                android:textSize="@dimen/text_size_16" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>