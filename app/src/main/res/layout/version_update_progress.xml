<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/shape_green_rec"
              android:orientation="vertical">

    <TextView
        android:id="@+id/tv_versionprogress"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/green"
        android:gravity="center"
        android:text="当前进度"
        android:textColor="@color/white"
        android:textSize="22sp"/>

    <TextView
        android:id="@+id/tv_devide"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#25C730"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <ProgressBar
            android:id="@+id/bar_progress"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_centerInParent="true"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="1dp"
            android:indeterminateOnly="false"
            android:progressDrawable="@drawable/horizontal_progress_bar"/>
    </RelativeLayout>
</LinearLayout>
